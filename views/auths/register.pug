extends ../shared/layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.shadow
          .card-header.text-center
            h3 Register
          .card-body
            form(action="/auths/register" method="POST")
              .form-group.mb-3
                label(for="name") Full Name
                input#name.form-control(type="text" name="name" required placeholder="Enter your full name")
              .form-group.mb-3
                label(for="email") Email address
                input#email.form-control(type="email" name="email" required placeholder="Enter your email")
              .form-group.mb-3
                label(for="password") Password
                input#password.form-control(type="password" name="password" required placeholder="Enter your password")
              .form-group.mb-3
                label(for="confirmPassword") Confirm Password
                input#confirmPassword.form-control(type="password" name="confirmPassword" required placeholder="Confirm your password")
              button.btn.btn-primary.btn-block(type="submit") Register

            // Add the link to login page below the form
            .text-center.mt-3
              p Already have an account?
              a(href="/auths/login") Login here

          .card-footer.text-center
            small.text-muted By signing up, you agree to our 
            a(href="#") Terms of Service 
            |  and 
            a(href="#") Privacy Policy
