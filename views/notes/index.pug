extends ../shared/layout

block content
  include ../shared/note-card.pug
  
  main.container
    h1 Your Notes
    p.text-muted.mb-3 Welcome to your notes dashboard. Here you can create, edit, and delete your notes.
    a(href="/notes/create" class="btn btn-primary mb-3") Create Note

    .row
      each note in notes
        .col-md-4
          +noteCard(note._id, note.userId, note.title, note.content, 'Details')
          // Hiển thị tags liên quan đến note
          if note.Tags.length
            h4 Tags:
            ul
              each tag in note.Tags
                li= tag.name
          else
            p No tags associated with this note.
        